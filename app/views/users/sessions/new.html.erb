<div class="w-full max-w-xs mx-auto mt-8 mb-8">
  <h2 class="mb-8 text-center text-2xl font-extrabold text-sap-black">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-8") do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@provider.com", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Log in", class: "text-center w-32 h-10 py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-sap-white focus:outline-none bg-sap-grey rounded-lg border border-gray-200 hover:bg-sap-black hover:text-sap-blue focus:z-10 focus:ring-4 inline-block" %>
    </div>
  <% end %>

  <div class="mt-8 text-center">
    <%= render "users/shared/links" %>
  </div>
</div>
