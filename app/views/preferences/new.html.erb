<h2 class="mt-10 mb-2 text-2xl font-extrabold text-gray-900">Choose your preferences:</h2>

<%= form_with model: Preference.new, url: preferences_path, method: :post, local: true do |form| %>
  <%= form.collection_select(:school_specialization_id, SchoolSpecialization.all, :id, :display_name, { prompt: "Please select:" }, { class: "mt-10 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1" }) %>
  <%= form.hidden_field :priority, value: current_user.preferences.count + 1 %>
  <%= form.submit "Add Preference", class: "mt-10 py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 inline-block" %>
<% end %>

<div class="mt-10 relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
       <tr>
          <th scope="col" class="px-6 py-3 text-center">
            Preference
          </th>
          <th scope="col" class="px-6 py-3 text-center">
            Priority
            </th>
            <th>
            </th>
        </tr>
     </thead>
       <tbody>
          <% current_user.preferences.each do |preference|%>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                  <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                      <%= SchoolSpecialization.find(preference.school_specialization_id).display_name if preference.school_specialization_id.present? %>
                  </th>
                  <td class="px-6 py-4 text-center">
                      <%= preference.priority %>
                  </td>
                  <td class="px-6 py-4">
                      <% if !preference.id.nil? %>
                        <%= button_to 'Delete', preference_path(preference), method: :delete %>
                      <% end %>
                  </td>
              </tr>
          <% end %>
    </tbody>
  </table>
  </div>