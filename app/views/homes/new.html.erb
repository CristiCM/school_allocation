<% content_for :main_classes, 'container mx-auto mt-25 px-5' %>

<% if current_user %>
    <% case current_user.role %>
    <% when "student"%>
        <%= render 'student_how_to' %>
        
        <% user_assignment = Assignment.find_by(user_id: current_user.id) %>
        <%= render 'student_assignment_result' if user_assignment&.unassigned == false %>

    <% when "admin" %>
        <%= render 'admin_how_to' %>
    <% else %>
        <%= render 'unauthorized_home_page' %>
    <% end %>
<% end %>
